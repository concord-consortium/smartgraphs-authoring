  <!-- By default a recursive tag inside a polymorphic definition just calls the base card
       So we have to explicitly set the type-->
  <card:pane for-type="&this.pane.class" merge>
    <append-heading:>
      <delete-button label="Delete" param/>
    </append-heading:>
