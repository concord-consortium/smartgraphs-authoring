<extend tag="show-page" for="Activity">
  <old-show-page merge>
    <append-content-header:>
      <br/><br/>
      <activityCategories/>
    </append-content-header:>
    <new-link: replace>
      <a:pages action="new" if="&can_edit?">
        <ht key="page.actions.new" count="1">
